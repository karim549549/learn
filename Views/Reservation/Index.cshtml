                    <li><a asp-action="Index" asp-controller="Services">Services</a></li>
                    <li><a asp-action="Index" asp-controller="Trending">Trending destinations</a></li>

                    <li class="dropdown">
                        <a href="#"><span>Join Us</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a asp-action="Index" asp-controller="Login">Log Out</a></li>
                        </ul>
                    </li>
                    <li><a asp-action="Index" asp-controller="Contact">Contact us</a></li>
                    @if (ViewBag.Admin == true)
                    {
                        <li><a asp-action="Index" asp-controller="Dash">Admin</a></li>
                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Services</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li><a  asp-action="Index" asp-controller="Services" >Services</a></li>
                    <li>Reservation</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <div class="landing">
        <div class="container pad1 MyboxShadow">
            <div class="grid">
                <div class="row pad1 flex justify-content-center align-content-center ">
                    <div class="col-lg-3 flex flex-column section1">
                        <div class=" flex flex-column MyboxShadow categories p-0  section">
                            <h6 class="pad1">Categories</h6>
                            <div class="pad1 flex flex-column ">
                                <button>Most Reviewd <i class="fa-solid fa-eye"></i></button>
                                <button>Favor destinations <i class="fa-solid fa-heart"></i></button>
                                <button>Top Rated <i class="fa-solid fa-star"></i></button>
                                <button>sale % <i class="fa-solid fa-chart-column"></i></button>
                            </div>
                        </div>
                        <div class="pad1 comments">
